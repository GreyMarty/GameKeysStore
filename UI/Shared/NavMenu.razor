@using UI.Authentication

@inject AuthenticationStateProvider AuthenticationStateProvider

<nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
    <div class="container">
        <a class="navbar-brand" href="">BlazingTopMenu</a>
        <button class="navbar-toggler @NavButtonCssClass" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-label="Toggle navigation" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse @NavBarCssClass" id="navbarCollapse" @onclick="ToggleNavMenu">
            <form class="form-inline navbar-nav me-auto d-flex justify-content-end">
                <input class="form-control me-1" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-warning my-2 my-sm-0" type="submit">
                    <i class="oi oi-magnifying-glass"/>
                </button>
            </form>
            <div class="d-flex align-items-center">
                <a class="text-reset me-3 btn">
                    <i class="oi oi-cart" />
                    <span class="badge rounded-pill badge-notification bg-danger">0</span>
                </a>
                <AuthorizeView>
                    <Authorized>
                        <button class="btn btn-outline-danger my-2 my-sm-0 d-flex justify-content-around align-items-center" @onclick="SignOutAsync">
                            <span>Sign Out</span>
                            <i class="oi oi-account-logout ms-2"/>
                        </button>
                    </Authorized>
                    <NotAuthorized>
                        <a class="btn btn-outline-success my-2 my-sm-0 d-flex justify-content-around align-items-center" href="/login">
                            <span>Sign In</span>
                            <i class="oi oi-account-login ms-2"/>
                        </a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;
    private string? NavBarCssClass => collapseNavMenu ? null : "show";
    private string? NavButtonCssClass => collapseNavMenu ? "collapsed" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private async Task SignOutAsync()
    {
        var authenticationStateProvider = (CustomAuthenticationStateProvider)AuthenticationStateProvider;
        await authenticationStateProvider.LogOutAsync();
    }
}